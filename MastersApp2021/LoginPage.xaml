<Page x:Class="MastersApp2021.LoginPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:MastersApp2021"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  Title="Авторизация">
	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<TextBlock Style="{StaticResource BlockCommon}" Text="Логин:"/>
				<TextBox Name="TBoxLogin"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
				<TextBlock Style="{StaticResource BlockCommon}" Text="Пароль:"/>
				<PasswordBox Name="PBoxPassword"/>
			</StackPanel>
			<Button Name="BtnLogin" Click="BtnLogin_Click" Content="Войти" HorizontalAlignment="Right"/>
		</StackPanel>
	</Grid>
</Page>